<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="TCP IP Client" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="txtbxIP" HorizontalAlignment="Left" Margin="100,15,0,0" TextWrapping="Wrap" Text="127.0.0.1:9000" VerticalAlignment="Top" Width="500" Height="30" RenderTransformOrigin="0.501,-1.177"/>
        <Label Content="Server IP :" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top" Height="30" Width="80"/>
        <Button x:Name="btnConnect" Content="Connect to Server" HorizontalAlignment="Left" Margin="609,15,0,0" VerticalAlignment="Top" Height="30" Width="175" Click="btnStart_Click"/>
        <TextBox x:Name="txtbxInfo" HorizontalAlignment="Left" Height="262" Margin="104,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="497" IsReadOnlyCaretVisible="True" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True" IsReadOnly="True"/>
        
        <TextBox x:Name="txtbxMessage" HorizontalAlignment="Left" Height="29" Margin="107,364,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="492"/>
        <Button x:Name="btnSend" Content="Send Message" HorizontalAlignment="Left" Height="28" Margin="611,365,0,0" VerticalAlignment="Top" Width="179" Click="btnSend_Click"/>
        <Label Content="Message :" HorizontalAlignment="Left" Height="30" Margin="9,363,0,0" VerticalAlignment="Top" Width="69"/>
        
        <Label Content="Received Text :" HorizontalAlignment="Left" Height="27" Margin="104,52,0,0" VerticalAlignment="Top" Width="177"/>
    </Grid>
</Window>
