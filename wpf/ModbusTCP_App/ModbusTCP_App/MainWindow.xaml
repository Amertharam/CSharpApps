<Window x:Class="ModbusTCP_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModbusTCP_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <CheckBox x:Name="chkbxBit1" Grid.Row="0" Grid.Column="0" Checked="chkbxBit1_Checked" Unchecked="chkbxBit1_Unchecked"></CheckBox>
        <CheckBox x:Name="chkbxBit2" Grid.Row="1" Grid.Column="0" Checked="chkbxBit2_Checked" Unchecked="chkbxBit2_Unchecked"></CheckBox>
        <Label Content="bit1" Grid.Row="0" Grid.Column="1"></Label>
        <Label Content="bit2" Grid.Row="1" Grid.Column="1"></Label>
        <TextBox x:Name="txtbxBit1" Grid.Row="0" Grid.Column="2"></TextBox>
        <TextBox x:Name="txtbxBit2" Grid.Row="1" Grid.Column="2"></TextBox>
        <Label Content="Word1" Grid.Row="2" Grid.Column="0"></Label>
        <Label Content="Word2" Grid.Row="3" Grid.Column="0"></Label>
        <Label Content="Word1" Grid.Row="4" Grid.Column="0"></Label>
        <Label Content="Word2" Grid.Row="5" Grid.Column="0"></Label>
        <TextBox x:Name="txtboxReadReg1" Grid.Row="2" Grid.Column="1"></TextBox>
        <TextBox x:Name="txtboxReadReg2" Grid.Row="3" Grid.Column="1"></TextBox>
        <TextBox x:Name="txtboxWriteReg1"  Grid.Row="4" Grid.Column="1"></TextBox>
        <TextBox x:Name="txtboxWriteReg2"  Grid.Row="5" Grid.Column="1"></TextBox>
        <Button Grid.Row="2" Grid.Column="2" Click="RegRead_Button_Click"> Read</Button>
        <Button Grid.Row="4" Grid.Column="2" Click="RegWrite_Button_Click"> Write</Button>
    </Grid>
</Window>
